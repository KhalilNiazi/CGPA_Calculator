<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome to CGPA Calculator"
        android:textSize="18sp"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginBottom="16dp" />

    <EditText
        android:id="@+id/etName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Full Name"
        android:inputType="textPersonName"
        android:background="@android:drawable/edit_text"
        android:padding="10dp"
        android:layout_marginBottom="12dp" />

    <EditText
        android:id="@+id/etRoll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Roll Number(e.g 2022(S)-CS-01"
        android:inputType="text"
        android:background="@android:drawable/edit_text"
        android:padding="10dp"
        android:layout_marginBottom="12dp" />

    <EditText
        android:id="@+id/etSemester"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Semester (e.g. 1st, 2nd)"
        android:inputType="text"
        android:background="@android:drawable/edit_text"
        android:padding="10dp"
        android:layout_marginBottom="12dp" />

    <EditText
        android:id="@+id/etDept"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Department (e.g. BBA, CS)"
        android:inputType="text"
        android:background="@android:drawable/edit_text"
        android:padding="10dp"
        android:layout_marginBottom="12dp" />

    <!-- New University Field -->
    <EditText
        android:id="@+id/etUniversity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="University (e.g.FAST,NUST,UET)"
        android:inputType="text"
        android:background="@android:drawable/edit_text"
        android:padding="10dp"
        android:layout_marginBottom="20dp" />

</LinearLayout>
